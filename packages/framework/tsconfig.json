{
	"compilerOptions": {
		"strict": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"lib": ["DOM", "ES2022"],
		"types": ["@cloudflare/workers-types", "node"],
		"customConditions": ["source"],
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"isolatedModules": true,
		"sourceMap": true,
		"declarationMap": true
	}
}
